{
    "name": "selenium-mocha-chai",
    "version": "1.0.0",
    "type": "module",
    "description": "Selenium test automation using Mocha and Chai with ES Modules",
    "scripts": {
        "test": "mocha \"test/**/*.test.js\" --timeout 30000",
        "test:report": "mocha \"test/**/*.test.js\" --reporter mochawesome --timeout 30000 --reporter-options reportDir=reports,reportFilename=index"
    },
    "devDependencies": {
        "chai": "^4.4.1",
        "chromedriver": "^124.0.0",
        "mocha": "^10.8.2",
        "mochawesome": "^7.1.3",
        "selenium-webdriver": "^4.34.0"
    }
}
